/* Recursion */

real fact(int n) := cond (n<2,1,n*fact(n-1));

# RealFormat FIXED

print("Factorials:\n");
for (int i in {0..20}) {
  print(i:3,"! is ", fact(i):1:0, "\n");
}

print("Fibonacci:\n");
int fib(int n) := cond (n<2, 1, fib(n-1)+fib(n-2));
for (int i in {0..30}) {
  print(i:3, "th fibonacci: ", fib(i), "\n");
}

