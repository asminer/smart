// Various integer sets / for loops

int n := null;

print("\nInteger loops\n\n");

print("interval: ");
for (int i in {1..6}) {
  print(i, " ");
}
print("\n");

print("interval: ");
for (int i in {1..6..2}) {
  print(i, " ");
}
print("\n");

print("empty: ");
for (int i in {1..5..-1}) {
  print(i, " ");
}
print("\n");

print("backwards: ");
for (int i in {5..1..-1}) {
  print(i, " ");
}
print("\n");

print("singleton: ");
for (int i in {7}) {
  print(i, " ");
}
print("\n");

print("list: ");
for (int i in {3, 1, 4, 1, 5, 9, 2, 6, 5, 3, 5, 8, 9, 7, 9, 3}) {
  print(i, " ");
}
print("\n");

print("complex: ");
for (int i in {12, 13, 1..5, -6..23..3}) {
  print(i, " ");
};
print("\n");

print("null: ");
for (int i in {1..null}) {
  print(i, " ");
}
print("\n");

print("\nReal loops\n\n");

print("interval: ");
for (real x in {1.0..6.0..2.0}) {
  print(x, " ");
}
print("\n");

print("interval: ");
for (real x in {0.2..1.3..0.2}) {
  print(x, " ");
}
print("\n");

print("empty: ");
for (real x in {1.0..6.0..-2.0}) {
  print(x, " ");
}
print("\n");

print("backwards: ");
for (real x in {6.0..1.0..-2.0}) {
  print(x, " ");
}
print("\n");

print("singleton: ");
for (real x in {7.1}) {
  print(x, " ");
}
print("\n");

print("list: ");
for (real x in {2.7, 1.8, 2.8, 1.8}) {
  print(x, " ");
}
print("\n");

print("complex: ");
for (real x in {12.3, 10.5, 1.5..5.5..1.0, -7.0..23.5..3.5}) {
  print(x, " ");
};
print("\n");

print("\nSets with elements requiring promotions\n\n");

print("interval: ");
for (real x in {1..6.0..2.0}) {
  print(x, " ");
}
print("\n");

print("interval: ");
for (real x in {1.0..6..2.0}) {
  print(x, " ");
}
print("\n");

print("interval: ");
for (real x in {1.0..6.0..2}) {
  print(x, " ");
}
print("\n");

print("\nLoops requiring set promotions\n\n");

print("interval: ");
for (real x in {1..6..2}) {
  print(x, " ");
}
print("\n");

print("interval: ");
for (real x in {1..5}) {
  print(x, " ");
}
print("\n");

print("singleton: ");
for (real x in {7}) {
  print(x, " ");
}
print("\n");

print("list: ");
for (real x in {1, 1.5}) {
  print(x, " ");
}
print("\n");

print("list: ");
for (real x in {1.5, 2}) {
  print(x, " ");
}
print("\n");

print("list: ");
for (real x in {1, 1.5, 2, 2.5, 3}) {
  print(x, " ");
}
print("\n");

print("complex: ");
for (real x in {1.5..3.6..1.0,  1..3}) {
  print(x, " ");
}
print("\n");

print("\nMulti-dimensional loops\n\n");

for (int i in {1..9}, int j in {1..9}) {
  print("(", i, ",", j, ")");
}
print("\n\n");

for (int i in {1..4}, int j in {1..4}, int k in {1..4}) {
  print("(", i, ",", j, ",", k, ")");
}
print("\n\n");

print("\nMulti-dimensional non-rectangular loops\n\n");

for (int i in {1..9}, int j in {i..9}) {
  print("(", i, "<=", j, ")");
}
print("\n\n");

for (int i in {1..9}, int j in {i..9}, int k in {j..9}) {
  print("(", i, "<=", j, "<=", k, ")");
}
print("\n\n");

print("Just for kicks:\n\n");

int N := 9;

print("  * |");
for (int i in {1..N}) { print(i:3); }
print("\n----+");
for (int i in {1..N}) { print("---"); }
print("\n");
for (int i in {1..N}) {
  print(i:3, " |");
  for (int j in {1..N}) {
    print(i*j:3);
  }
  print("\n");
}


